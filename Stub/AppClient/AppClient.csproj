    </Content>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\application\usr-ammeter\usr-ammeter.csproj" />
    <ProjectReference Include="..\..\framework\FrameworkCore\FrameworkCore.csproj" />
  </ItemGroup>

</Project>